
.post-toc-empty {
  font-size: 14px;
  color: $grey-dim;
}

.post-toc-wrap { overflow: hidden; }

.post-toc { overflow: auto; }

.post-toc ol {
  margin: 0;
  padding: 0;
  text-align: left;
  list-style: none;

  & > ol { padding-left: 0; }

  a {
    the-transition();
    transition-property: all;
    color: $toc-link-color;
    border-bottom: none;

    &:hover {
      color: #333;
    }
  }
}
.post-toc li {
  padding: 0 2px 0 10px;
  font-size: 16px;
}

.post-toc .nav-item {
  overflow: hidden;
  text-overflow: ellipsis;
  text-align: left;
  white-space: nowrap if !hexo-config('toc.wrap');
  line-height: 2;
  list-style: none;
   a {
    the-transition();
    transition-property: all;
    color: $toc-link-color;
    border-bottom: none;
    color: #0186A7;

    &:hover {
      color: #025375;
      font-weight: bold;
    }
  }
}

.post-toc .nav .nav-child { display: none; }

.post-toc .nav .active > .nav-child { display: block; }

.post-toc .nav .active-current > .nav-child {
  display: block;
  & > .nav-item { display: block; }
}

.post-toc .nav .active > a {
  color: $toc-link-active-color;
  border-bottom-color: $toc-link-active-border-color;
}

.post-toc .nav .active-current > a {
  color: #025375;
  font-weight: bold;
  &:hover {
    color: $toc-link-active-current-border-color;
  }
}
